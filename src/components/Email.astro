---
import { Icon } from "astro-icon/components";

interface Props {
  senderName: string;
  title?: string;
  avatarColor: "primary" | "secondary";
  graphicSignature?: "ladebil";
}

const avatarColor =
  Astro.props.avatarColor === "secondary"
    ? "text-slate-700"
    : "text-emerald-800";
---

<section class="my-12 rounded-xl bg-slate-950 p-8">
  {
    Astro.props.title && (
      <h2 class="mt-2 border-b border-b-slate-700 pb-4">{Astro.props.title}</h2>
    )
  }
  <div class="flex gap-4">
    <Icon
      name="user"
      class={`w-12 h-12 rounded-xs border p-2 border-slate-600 bg-slate-900 ${avatarColor}`}
    />
    <strong>{Astro.props.senderName}</strong>
  </div>
  <slot />
  {
    Astro.props.graphicSignature === "ladebil" && (
      <div class="mt-12 flex flex-col items-center">
        <div class="text-2xl">LA DÃ‰BIL</div>
        <div class="mb-4">Moderna y emocionante</div>
        <div class="flex gap-4">
          <a class="font-normal underline" href="/">
            Contacto
          </a>
          <a href="https://ladebil.bandcamp.com/album/s-ngrala">Bandcamp</a>
          <span>All right reserved</span>
        </div>
      </div>
    )
  }
</section>
