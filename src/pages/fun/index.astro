---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";

interface Content {
  title: string;
  url: string;
  imageLink: string;
  imageAltText: string;
}

const contentArray: Array<Content> = [
  {
    title: "Jakob's Fine Wines - a demo of the View Transition API",
    url: "/jakobs-fine-wines",
    imageLink: "/images/fun/jakobs-fine-wines.webp",
    imageAltText: "A web-based wine store",
  },
  {
    title: "Exploring Features in Modern CSS",
    url: "/modern-css",
    imageLink: "/images/fun/modern-css.webp",
    imageAltText:
      'A purple slideshow slide with text saying "Exploring Features in Modern CSS"',
  },
  {
    title: "The red and black challenge",
    url: "http://redandblackchallenge.com",
    imageLink: "/images/fun/rabc.webp",
    imageAltText:
      'A dark red lotus logo with text saying "Red and black challenge" on a solid black background',
  },
  {
    title: "The best Zulrah pattern guide",
    url: "http://itzjacki.com/zulrah",
    imageLink: "/images/fun/zulrah.webp",
    imageAltText:
      'A screenshot from Oldschool Runescape of someone fighting the boss Zulrah, with text saying "The best Zulrah pattern guide',
  },
  {
    title: "Afterglow",
    url: "/afterglow",
    imageLink: "/images/fun/afterglow.webp",
    imageAltText:
      'A screenshot from a rythm game with purple and cyan neon colors on a black background, with text saying "Afterglow"',
  },
  {
    title: "The tale of Dave the domain flipper",
    url: "/ladebil",
    imageLink: "/images/fun/ladebil.webp",
    imageAltText:
      'Man holding a url, ladebil.no, with a Band logo saying "La Debil" in the background',
  },
];
---

<BaseLayout title="Fun - Jakob Kielland" gap>
  <h1 class="text-4xl font-bold">Fun</h1>
  <p class="max-w-xl">
    A random collection of (potentially) interesting projects and content I have
    enjoyed creating over the years. Enjoy! ðŸ•º
  </p>

  <nav class="grid grid-cols-1 gap-8 md:grid-cols-2">
    {
      contentArray.map((content: Content) => (
        <a
          href={content.url[0] === "/" ? `fun${content.url}` : content.url}
          class="group box-border rounded-xl border-emerald-300 bg-slate-950 p-8"
        >
          <Image
            width="300"
            height="150"
            src={content.imageLink}
            alt={content.imageAltText}
            class="h-[150px] w-[300px] rounded-lg border-2 border-slate-800 bg-slate-800"
          />
          <h2 class="mt-4 w-min min-w-full pt-2 text-lg decoration-emerald-300 underline-offset-4 group-hover:underline">
            {content.title}
          </h2>
        </a>
      ))
    }
  </nav>
</BaseLayout>
